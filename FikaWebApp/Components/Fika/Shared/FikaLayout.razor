@inherits LayoutComponentBase
@layout FikaWebApp.Components.Layout.MainLayout

<AuthorizeView>
	<Authorized>
		<MudText Typo="Typo.h3" GutterBottom="true">Fika Management</MudText>
		<MudGrid>
			<MudItem xs="1" sm="2">
				<MudText Typo="Typo.h6" GutterBottom="true">Manage the Fika server</MudText>
				<FikaNavMenu />
			</MudItem>
			<MudItem xs="11" sm="10">
				@Body
			</MudItem>
		</MudGrid>
	</Authorized>
	<NotAuthorized>
		<MudText Typo="Typo.h3" GutterBottom="true" Color="Color.Error">Invalid Permissions</MudText>
	</NotAuthorized>
</AuthorizeView>
