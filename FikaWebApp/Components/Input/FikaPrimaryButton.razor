<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@OnClick" StartIcon="@StartIcon" Disabled="@Disabled" FullWidth="@FullWidth">
	@Text
</MudButton>

@code {
	[Parameter]
	public string? Text { get; set; }

	[Parameter]
	public EventCallback<MouseEventArgs> OnClick { get; set; }

	[Parameter]
	public string? StartIcon { get; set; }

	[Parameter]
	public bool Disabled { get; set; }

	[Parameter]
	public bool FullWidth { get; set; }
}
